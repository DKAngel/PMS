        #{roomOwner,jdbcType=INTEGER},
      </if>
    </trim>
  </insert>
  <update id="updateByPrimaryKeySelective" parameterType="com.pms.pojo.Room" >
    update room
    <set >
      <if test="roomSize != null" >
        room_size = #{roomSize,jdbcType=INTEGER},
      </if>
