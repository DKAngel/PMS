        room_pay = #{roomPay,jdbcType=VARCHAR},
      </if>
      <if test="roomOwner != null" >
        room_owner = #{roomOwner,jdbcType=INTEGER},
      </if>
    </set>
    where room_id = #{roomId,jdbcType=INTEGER}
  </update>
  <update id="updateByPrimaryKey" parameterType="com.pms.pojo.Room" >
